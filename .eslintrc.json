{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": "tsconfig.json"
    },
    "extends": [
        "eslint:recommended", 
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "env": {
      "node": true
    },
    "rules": {
      "prettier/prettier": ["error",{
        "endOfLine": "auto"}
      ]
    },
    "ignorePatterns": ["dist"]
  }
  